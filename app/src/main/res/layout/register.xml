<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/green">
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="用户名："
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tv_passwd"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="新密码："
        android:layout_below="@id/tv_user"
        android:layout_alignRight="@id/tv_user" />
    <TextView
        android:id="@+id/tv_passwd2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="确认密码："
        android:layout_below="@id/tv_passwd"
        android:layout_alignRight="@id/tv_user"/>
    <EditText
        android:id="@+id/et_user"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="jay"
        android:layout_alignTop="@id/tv_user"
        android:layout_toRightOf="@id/tv_user"/>
    <EditText
        android:id="@+id/et_passwd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="tiger"
        android:layout_below="@id/et_user"
        android:layout_alignLeft="@id/et_user"/>
    <EditText
        android:id="@+id/et_passwd2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="tiger"
        android:layout_below="@id/et_passwd"
        android:layout_alignLeft="@id/et_passwd"/>
    <Button
        android:id="@+id/b_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交注册"
        android:layout_below="@id/et_passwd2"
        android:layout_alignRight="@id/et_passwd2"
        android:layout_marginTop="100dp"/>
</RelativeLayout>